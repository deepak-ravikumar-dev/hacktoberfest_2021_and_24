    <title>Peach-Themed Calculator</title>
    <style>
        body {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background-color: #fdf3f0; /* Light peach background */
            font-family: Arial, sans-serif;
            margin: 0;
        }

        .calculator {
            background: #fff6f2; /* Very light peach */
            padding: 20px;
            border-radius: 15px;
            box-shadow: 0 0 20px rgba(255, 182, 154, 0.5); /* Peach shadow */
        }

        .display {
            width: 240px;
            padding: 15px;
            border: none;
            border-radius: 10px;
            text-align: right;
            margin-bottom: 20px;
            background: #ffe8e0; /* Soft peach */
            color: #333;
            font-size: 1.5em;
            box-shadow: 0 0 10px rgba(255, 182, 154, 0.3); /* Peach glow */
        }

        .button {
            width: 55px;
            height: 55px;
            margin: 5px;
            border: none;
            border-radius: 10px;
            background: #ffd1c2; /* Light peach button */
            color: #333;
            font-size: 1.2em;
            cursor: pointer;
            transition: 0.3s;
            box-shadow: 0 0 15px rgba(255, 182, 154, 0.2); /* Peach glow */
        }

        .button:hover {
            background: #ffc1b3; /* Slightly darker peach on hover */
            box-shadow: 0 0 15px rgba(255, 182, 154, 0.5);
        }

        .color-button {
            background: #ffe8e0; /* Light peach */
            width: 45px;
            height: 45px;
            border: none;
            border-radius: 50%;
            margin: 3px;
            cursor: pointer;
            transition: 0.3s;
            outline: none;
            box-shadow: 0 0 10px rgba(255, 182, 154, 0.5);
        }

        /* Different soft colors for the glowing effect */
        .color1 { background: #ffb6a9; }  /* Soft Peach Pink */
        .color2 { background: #ffd6c9; }  /* Peach Cream */
        .color3 { background: #ffe8d6; }  /* Light Peach */
        .color4 { background: #ffccb9; }  /* Blush Peach */
        .color5 { background: #ffdecf; }  /* Light Coral Peach */

        .color-button:hover {
            transform: scale(1.1);
            box-shadow: 0 0 15px rgba(255, 182, 154, 0.8);
        }
    </style>
