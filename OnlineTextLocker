<body>

    <div class="locker-container">
        <div class="locker-header">Online Text Locker</div>

        <textarea class="text-area" id="textInput" placeholder="Enter your text here..."></textarea>
        <input type="password" class="input-field" id="passwordInput" placeholder="Enter password...">

        <button class="button" onclick="lockText()">Lock Text</button>
        <button class="button" onclick="unlockText()">Unlock Text</button>

        <div class="hidden-text" id="lockedMessage"></div>
        <div class="message" id="statusMessage"></div>
    </div>

    <script>
        let storedText = "";
        let storedPassword = "";

        function lockText() {
            const textInput = document.getElementById("textInput").value;
            const passwordInput = document.getElementById("passwordInput").value;

            if (textInput && passwordInput) {
                storedText = textInput;
                storedPassword = passwordInput;

                document.getElementById("textInput").value = "";
                document.getElementById("passwordInput").value = "";

                document.getElementById("lockedMessage").style.display = "block";
                document.getElementById("lockedMessage").textContent = "Text is locked! ðŸ”’";
                document.getElementById("statusMessage").textContent = "Use your password to unlock the text.";
            } else {
                document.getElementById("statusMessage").textContent = "Please enter text and a password to lock!";
            }
        }

        function unlockText() {
            const passwordInput = document.getElementById("passwordInput").value;

            if (passwordInput === storedPassword) {
                document.getElementById("lockedMessage").textContent = storedText;
                document.getElementById("statusMessage").textContent = "Text unlocked successfully! ðŸ”“";
            } else {
                document.getElementById("statusMessage").textContent = "Incorrect password! Please try again.";
            }
        }
    </script>

</body>
