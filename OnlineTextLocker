        }

        .locker-container {
            background: #fff;
            padding: 30px;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
            max-width: 500px;
            width: 90%;
            text-align: center;
        }

        .locker-header {
            font-size: 1.8em;
            color: #ff7f7f;
            margin-bottom: 20px;
